#sign_in2
  .container
    .row.login
      .span5.left_box
        %h4 Sign up for an account
        .perk_box
          .perk
            %span.icos.ico1
            %p
              %strong Lorem alteration
              in some form  injected humour these randomised words .
          .perk
            %span.icos.ico2
            %p
              %strong There are many variations
              of passages of Lorem alteration in some form  injected humour these randomised words.
          .perk
            %span.icos.ico3
            %p
              %strong Alteration in some form
              injected humour these randomised words.
      .span6.signin_box
        .box
          .box_cont
            .social
              = link_to omniauth_authorize_path(resource_name, 'facebook'), class: 'circle facebook' do
                %img{:alt => "", :src => "/assets/face.png"}
              %a.circle.twitter{:href => "#"}
                %img{:alt => "", :src => "/assets/twt.png"}
              %a.circle.gplus{:href => "#"}
                %img{:alt => "", :src => "/assets/gplus.png"}
            .division
              .line.l
              %span or
              .line.r
            .form
              = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
                = f.email_field :email, autofocus: true, placeholder: 'Email', class: 'signin-input'
                = f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'signin-input'
                = f.password_field :password_confirmation, autocomplete: "off", class: 'signin-input', placeholder: ' Confirm Password'
                .forgot
                  %span Already have an account?
                  = link_to "Sign in", new_user_session_path
                = f.submit 'Sign up'
